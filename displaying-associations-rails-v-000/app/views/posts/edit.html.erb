<h1>Edit Post</h1>

<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label :title, 'Post Title:' %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description, 'Post Description:' %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :category_id, 'Post Category:' %><br>
    <%= f.collection_radio_buttons :category_id, @categories, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
